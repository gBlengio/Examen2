#include "p16F887.inc"   ; TODO INSERT CONFIG CODE HERE USING CONFIG BITS GENERATOR
 	__CONFIG	_CONFIG1,	_INTRC_OSC_NOCLKOUT & _WDT_OFF & _PWRTE_OFF & _MCLRE_ON & _CP_OFF & _CPD_OFF & _BOR_OFF & _IESO_ON & _FCMEN_ON & _LVP_OFF 
 	__CONFIG	_CONFIG2,	_BOR40V & _WRT_OFF

RES_VECT  CODE    0x0000            ; processor reset vector
    GOTO    START                   ; go to beginning of program

    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
  
    GOTO    START

MAIN_PROG CODE                      ; let linker place main program

START

PW_1 EQU 0x20
PW_2 EQU 0x21
PW_3 EQU 0x22
PW_4 EQU 0x23
PW_5 EQU 0x24
PW_6 EQU 0x25
PW_7 EQU 0x26
PW_8 EQU 0x27 

PwStored_1 EQU 0x32
PwStored_2 EQU 0x33
PwStored_3 EQU 0x34
PwStored_4 EQU 0x35
PwStored_5 EQU 0x36
PwStored_6 EQU 0x37
PwStored_7 EQU 0x38
PwStored_8 EQU 0x39  
 
i equ 0x30
j equ 0x31
 
Flag_1 equ 0x40
Flag_2 equ 0x41

START

    BANKSEL PORTA ;
    CLRF PORTA ;Init PORTA
    BANKSEL ANSEL ;
    CLRF ANSEL ;digital I/O
    CLRF ANSELH
    BANKSEL TRISA ;
    MOVLW d'0'
    MOVWF TRISA 
    CLRF TRISB
    CLRF TRISC
    CLRF TRISD
    CLRF TRISE
    BCF STATUS,RP1
    BCF STATUS,RP0
    BCF PORTC,1
    BCF PORTC,0
    
INITLCD
    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    
INICIO	
   
    clrf PwStored_1
    clrf PwStored_2
    clrf PwStored_3
    clrf PwStored_4
    clrf PwStored_5
    clrf PwStored_6
    clrf PwStored_7
    clrf PwStored_8
    
    
    BCF PORTC,0		;command mode
    CALL Time_1
    
    MOVLW 0x80		;LCD position
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL Time_1

    MOVLW 'P'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'W'
    MOVWF PORTD
    CALL exec
    MOVLW 'O'
    MOVWF PORTD
    CALL exec
    MOVLW 'R'
    MOVWF PORTD
    CALL exec
    MOVLW 'D'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL Time_1
    
    MOVLW 0xC0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL Time_1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW b'00110110'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110110'
    MOVWF PW_1
    MOVLW b'00110101'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110101'
    MOVWF PW_2
    MOVLW b'00110100'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110100'
    MOVWF PW_3
    MOVLW b'00110010'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110010'
    MOVWF PW_4
    MOVLW b'00110010'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110010'
    MOVWF PW_5
    MOVLW b'00110001'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110001'
    MOVWF PW_6
    MOVLW b'00110001'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110001'
    MOVWF PW_7
    MOVLW b'00110011'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110011'
    MOVWF PW_8
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL Time_1
    
    MOVLW 0x90		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL Time_1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'N'
    MOVWF PORTD
    CALL exec
    MOVLW 'T'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'R'
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW 'P'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'W'
    MOVWF PORTD
    CALL exec
    MOVLW 'O'
    MOVWF PORTD
    CALL exec
    MOVLW 'R'
    MOVWF PORTD
    CALL exec
    MOVLW 'D'
    MOVWF PORTD
    CALL exec
    MOVLW ':'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL Time_1
    
    MOVLW 0xD0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL Time_1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_1
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_2
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_3
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_4
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_5
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_6
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_7
    CALL EnterPW
    movf Flag_1,0
    movwf PwStored_8
    call Time_2
    
    CALL PWCheck
    
    BCF PORTC,0		;command mode
    CALL Time_1
    
    MOVLW 0x81		;LCD position
    MOVWF PORTD
    CALL exec
    
    
        
    GOTO INICIO

EnterPW
    BSF PORTA,6
    BSF PORTA,5
    BSF PORTA,4
    BSF PORTA,3
    BSF PORTA,2
    BSF PORTA,1
    BSF PORTA,0
    
    movlw d'0'
    movwf Flag_2
    
    BCF PORTA,0
    BTFSS PORTA,4
    CALL No_1
    BTFSS PORTA,5
    CALL No_2
    BTFSS PORTA,6
    CALL No_3
    CALL Time_1
    BSF PORTA,0
    
    BCF PORTA,1
    BTFSS PORTA,4
    CALL No_4
    BTFSS PORTA,5
    CALL No_5
    BTFSS PORTA,6
    CALL No_6
    CALL Time_1
    BSF PORTA,1
    
    BCF PORTA,2
    BTFSS PORTA,4
    CALL No_7
    BTFSS PORTA,5
    CALL No_8
    BTFSS PORTA,6
    CALL No_9
    CALL Time_1
    BSF PORTA,2
    
    BCF PORTA,3
    BTFSS PORTA,4
    CALL Retry
    BTFSS PORTA,5
    CALL No_0
    BTFSS PORTA,6
    CALL Enter
    CALL Time_1
    BCF PORTA,3
    
    MOVLW d'1'
    SUBWF Flag_2,0
    BTFSC STATUS,Z
    RETURN
    GOTO EnterPW
    
No_1
    CALL C4
    MOVLW '1'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_2
    CALL C5
    MOVLW '2'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    RETURN
No_3
    CALL C6
    MOVLW '3'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_4
    CALL C4
    MOVLW '4'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_5
    CALL C5
    MOVLW '5'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_6
    CALL C6
    MOVLW '6'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_7
    CALL C4
    MOVLW '7'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_8
    CALL C5
    MOVLW '8'    
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_9
    CALL C6
    MOVLW '9'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
Retry
    CALL C4
    MOVLW '*'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
No_0
    CALL C5
    MOVLW '0'
    MOVWF Flag_1
    MOVWF PORTD
    CALL exec
    CALL Time_2
    MOVLW d'1'
    MOVWF Flag_2
    return
Enter
    CALL PWCheck
    RETURN
    
exec
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    RETURN
    
Time_1
    CLRF i
    MOVLW d'10'
    MOVWF j
Loop    
    MOVLW d'80'
    MOVWF i
    DECFSZ i
    GOTO $-1
    DECFSZ j
    GOTO Loop
    RETURN

Time_2
    CLRF i
    MOVLW d'25'
    MOVWF j
Loop2 
    MOVLW d'25'
    MOVWF i
    DECFSZ i
    GOTO $-1
    DECFSZ j
    GOTO Loop2
    RETURN
C4
    btfss   PORTA,4      
    goto    C4
    return
C5
    btfss   PORTA,5      
    goto    C5
    return
C6
    btfss   PORTA,6      
    goto    C6
    return
PWCheck	movf	PW_1, 0		
		subwf	PwStored_1, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_2, 0		
		subwf	PwStored_2, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_3, 0		
		subwf	PwStored_3, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_4, 0		
		subwf	PwStored_4, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_5, 0		
		subwf	PwStored_5, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_6, 0		
		subwf	PwStored_6, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_7, 0		
		subwf	PwStored_7, 0
		btfss	STATUS, Z
		goto	Compare
		movf	PW_8, 0		
		subwf	PwStored_8, 0
		btfss	STATUS, Z
		goto	Compare
		goto	Equal
		
Compare
    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
	IF_Diff
	BCF PORTC,0		;command mode
	CALL Time_1

	MOVLW 0x80		;LCD position
	MOVWF PORTD
	CALL exec

	BSF PORTC,0		;data mode
	CALL Time_1

	MOVLW 'ยก'
	MOVWF PORTD
	CALL exec
	MOVLW 'W'
	MOVWF PORTD
	CALL exec
	MOVLW 'R'
	MOVWF PORTD
	CALL exec
	MOVLW 'O'
	MOVWF PORTD
	CALL exec
	MOVLW 'N'
	MOVWF PORTD
	CALL exec
	MOVLW 'G'
	MOVWF PORTD
	CALL exec
	MOVLW ' '
	MOVWF PORTD
	CALL exec
	MOVLW 'P'
	MOVWF PORTD
	CALL exec
	MOVLW 'W'
	MOVWF PORTD
	CALL exec
    GOTO IF_Diff
Equal
    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL Time_1
    BCF PORTC,1
    CALL Time_1
    IF_EQ
    
	    BCF PORTC,0		;command mode
	    CALL Time_1

	    MOVLW 0x80		;LCD position
	    MOVWF PORTD
	    CALL exec

	    BSF PORTC,0		;data mode
	    CALL Time_1
	    
	MOVLW 'L'
	MOVWF PORTD
	CALL exec
	MOVLW 'O'
	MOVWF PORTD
	CALL exec
	MOVLW 'G'
	MOVWF PORTD
	CALL exec
	MOVLW 'G'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec
	MOVLW 'D'
	MOVWF PORTD
	CALL exec
	MOVLW ' '
	MOVWF PORTD
	CALL exec
	MOVLW 'I'
	MOVWF PORTD
	CALL exec
	MOVLW 'N'
	MOVWF PORTD
	CALL exec
    
	;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL Time_1
    
    MOVLW 0xC0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL Time_1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
	MOVLW 'W'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec
	MOVLW 'L'
	MOVWF PORTD
	CALL exec
	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'O'
	MOVWF PORTD
	CALL exec
	MOVLW 'M'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec

    GOTO IF_EQ
		
END
